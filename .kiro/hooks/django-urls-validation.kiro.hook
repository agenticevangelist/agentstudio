{
  "enabled": true,
  "name": "Django URLs Validation",
  "description": "Validates URL patterns when urls.py files are modified",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "backend/*/urls.py",
      "backend/djapp/urls.py"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "A Django urls.py file has been modified. Please validate the URL configuration:\n1. cd backend\n2. python manage.py check\n3. python manage.py show_urls (if django-extensions is installed)\n\nCheck for any URL pattern conflicts or routing issues."
  }
}